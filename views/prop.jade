extends header

head
    block title
        title 道具列表

block content
    h1
        a(href= '/')= '返回'

    ul
        each val in data
            li.ability
                a(href= `/prop/child?id=${val.prop_id}`)= `${val.prop_id}--${val.china_name}--${val.info}`

    div.Jump
        div.left
            if (data.prop_id !== 1)
                a(href= `/prop?offSet=${offSet- 10}&limit=10`)= '上一个'
            else
                p= '这是第一条数据'
        div.right
            if (!lastFlag)
                a(href= `/prop?offSet=${offSet + 10}&limit=10`)= '下一个'
            else
                p= '这是最后一条数据'